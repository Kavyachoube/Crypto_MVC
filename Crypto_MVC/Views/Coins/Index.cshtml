@model IEnumerable<Crypto_MVC.Models.Coin>

@{
    ViewData["Title"] = "CryptoCurrency Coins";
}

<h2 class="page-title">CryptoCurrency Coins</h2>

<div class="grid-container">
    @foreach (var coin in Model)
    {
        <div class="card">
            <img src="@coin.Image" alt="@coin.Name" class="icon" />
            <h3>@coin.Name (@coin.Symbol.ToUpper())</h3>
            <div class="info">
                <p><strong>Price:</strong> $@(coin.CurrentPrice.ToString("N2"))</p>
                <p>
                    <strong>24h Change:</strong>
                    <span class="@(coin.PriceChangePercentage24h >= 0 ? "positive" : "negative")">
                        @coin.PriceChangePercentage24h?.ToString("0.##") 
                    </span>
                </p>
            </div>
        </div>
    }
</div>
