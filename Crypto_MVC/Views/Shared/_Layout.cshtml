<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CryptoVerse</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="bg-dark text-white d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="/">CryptoVerse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Exchanges">Exchanges</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Coins">Coins</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search Coins">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
                <a class="btn btn-light ms-3" href="/Auth/SignIn">Sign In</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container text-center my-5 flex-grow-1">
        @RenderBody()
    </div>

    <!-- Footer Section -->
    <footer class="bg-primary text-center text-white py-3">
        &copy; 2025 CryptoVerse. All rights reserved.
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
