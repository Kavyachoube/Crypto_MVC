@model IEnumerable<Crypto_MVC.Models.Exchange>

@{
    ViewData["Title"] = "CryptoCurrency Exchanges";
}

<h2 class="page-title">CryptoCurrency Exchanges</h2>

<div class="grid-container">
    @foreach (var exchange in Model)
    {
        <div class="card">
            <img src="@exchange.Image" alt="@exchange.Name" class="icon" />
            <h3>@exchange.Name</h3>
            <p>@exchange.Country</p>
            <p><strong>Trust Score:</strong> @exchange.TrustScore?.ToString() ?? "N/A"</p>
            <p><strong>24h Volume (BTC):</strong> @exchange.TradeVolume24hBtc?.ToString("N0") ?? "N/A"</p>
            <a href="@exchange.Url" target="_blank">Visit ↗</a>
        </div>
    }
</div>
