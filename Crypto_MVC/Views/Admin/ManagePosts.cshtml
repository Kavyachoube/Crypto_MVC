@model List<Crypto_MVC.Models.PostModel>

<h2>Manage Posts</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt</td>
                <td>@post.UpdatedAt?.ToString() ?? "N/A"</td>
                <td>@post.UserId</td>
                <td>
                    <!-- You can add edit/delete actions later -->
                    <form asp-action="DeletePost" asp-controller="Admin" method="post">
                        <input type="hidden" name="id" value="@post.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
